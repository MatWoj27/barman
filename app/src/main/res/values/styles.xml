<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Style for the drawer toggle -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Style for CreateRecipeActivity to change cursor and highlight colors in edit texts -->
    <style name="CreateRecipeTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Style for action buttons in CreateRecipeActivity -->
    <style name="RoundedButtonStyle" parent="AppTheme">
        <item name="android:background">@drawable/rounded_btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
